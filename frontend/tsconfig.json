{
  "compilerOptions": {
    "baseUrl": ".", // Base directory for the project
    "paths": {
      "@/*": ["./*"] // Alias '@' pointing to the root of your project
    },
    "target": "ES2021", // You can adjust this depending on your environment
    "module": "ESNext", // Module system, adjust as needed
    "moduleResolution": "node", // Resolve modules as in Node.js
    "strict": true, // Enable strict type-checking options
    "jsx": "react-jsx" // Ensure this is correct if you're using React 17 or later
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
