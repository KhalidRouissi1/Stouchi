{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022", // You may change this based on the Node.js version you're using
    "lib": ["ES2023"], // You can adjust the libs based on the target environment
    "module": "ESNext", // Use ESNext modules
    "skipLibCheck": true,
    "moduleResolution": "Bundler", // Same bundler mode for module resolution
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true, // No output generated

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts"], // Only include Vite config file or other server-side code
  "exclude": ["node_modules"] // Exclude node_modules
}
